{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}
    <h1>Couleur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CodeHexa</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.name }}</td>
                <td>{{ couleur.codeHexa }}</td>
                <td>{{ couleur.CreatedAt ? couleur.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ couleur.UpdatedAt ? couleur.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_back_office_couleur_show', {'id': couleur.id}) }}">show</a>
                    <a href="{{ path('app_back_office_couleur_edit', {'id': couleur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_office_couleur_new') }}">Create new</a>
{% endblock %}
